# ====================================
# Zeta 生产环境配置
# ====================================
# 使用方法: cp .env.example .env
# 修改以下配置为实际生产环境值

# ------------------------------------
# 数据库配置
# ------------------------------------
POSTGRES_USER=zeta
POSTGRES_PASSWORD=your-strong-postgres-password-change-me
POSTGRES_DB=zeta

# ------------------------------------
# Redis 配置
# ------------------------------------
REDIS_PASSWORD=your-strong-redis-password-change-me

# ------------------------------------
# JWT 配置 (重要: 请使用强随机密钥)
# ------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# ------------------------------------
# 前端 URL (用于 OAuth 回调和邮件链接)
# ------------------------------------
FRONTEND_URL=http://localhost:3000

# ------------------------------------
# OAuth - GitHub (可选)
# ------------------------------------
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/callback/github

# ------------------------------------
# OAuth - DingTalk (可选)
# ------------------------------------
DINGTALK_APP_KEY=your-dingtalk-app-key
DINGTALK_APP_SECRET=your-dingtalk-app-secret
DINGTALK_CALLBACK_URL=http://localhost:3000/auth/callback/dingtalk

# ------------------------------------
# 邮件服务 (可选)
# ------------------------------------
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM="Zeta <noreply@zeta.dev>"

# ------------------------------------
# 七牛云对象存储 (可选)
# ------------------------------------
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-bucket-name
QINIU_DOMAIN=https://your-domain.com
QINIU_ZONE=z0
